@model List<Phone>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<a asp-action="Create" asp-controller="Phone">Добавить устройство</a>
@* https://localhost:5001/Phone/Create method GET*@
@if (Model.Count == 0)
{
    <h2>Список пуст.</h2>
}
else
{
    <h2>Список устройств</h2>
    <table style="width: 100%">
        <tr>
            <th>Id</th>
            <th>Наименование</th>
            <th>Компания</th>
            <th>Стоимость</th>
            <th></th>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Id</td>
                <td>@phone.Name</td>
                <td>@phone.Company</td>
                <td>@phone.Price</td>
                <td>
                    <a asp-route-id="@phone.Id"
                        asp-action="Add"
                        asp-controller="Basket"
                        class="btn btn-outline-warning">
                        В корзину
                    </a>
                </td>
            </tr>
        }
    </table>
}

