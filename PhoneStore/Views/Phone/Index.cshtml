@model List<Phone>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<a asp-action="Create" asp-controller="Phone">Добавить устройство</a>

@if (Model.Count == 0)
{
    <h2>Список пуст.</h2>
}
else
{
    <h2>Список устройств</h2>
    <table style="width: 100%">
        <tr>
            <th>Id</th>
            <th>Наименование</th>
            <th>Компания</th>
            <th>Стоимость</th>
        </tr>
        @foreach (var phone in Model)
        {
            <tr>
                <td>@phone.Id</td>
                <td>@phone.Name</td>
                <td>@phone.Company</td>
                <td>@phone.Price</td>
            </tr>
        }
    </table>
}

